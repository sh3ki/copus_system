<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CIT Faculty My Schedules</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color-start: #0f2027; /* Dark blue */
            --primary-color-end: #203a43; /* Darker blue */
            --secondary-color-start: #2c5364; /* Blue-green */
            --secondary-color-end: #203a43; /* Darker blue */
            --text-light: #e0e0e0;
            --text-dark: #333;
            --sidebar-width: 280px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--primary-color-start), var(--primary-color-end));
            color: var(--text-light);
            min-height: 100vh;
        }
        
        /* Header styles */
        header {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: fixed;
            top: 0;
            left: var(--sidebar-width);
            right: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
        }

        .logo {
            display: flex;
            align-items: center;
            font-weight: 600;
            font-size: 1.5rem;
            color: #fff;
        }
        .logo img {
            height: 40px;
            margin-right: 15px;
        }

        .header-title {
            font-size: 1.25rem;
            color: var(--text-light);
            margin-left: -150px;
        }

        .header-icons {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        .header-icons i {
            font-size: 1.5rem;
            color: var(--text-light);
            cursor: pointer;
            transition: color 0.3s;
        }
        .header-icons i:hover {
            color: #17e891;
        }
        .user-icon-circle {
            background: rgba(255, 255, 255, 0.2);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.25rem;
        }

        /* Sidebar styles */
        .custom-sidebar {
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background: linear-gradient(to bottom, #11405b, #0f2027);
            color: var(--text-light);
            padding: 2rem 1.5rem;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.3);
            z-index: 1001;
        }

        .custom-sidebar h6 {
            font-size: 1.2rem;
            font-weight: 600;
            color: #fff;
            margin-bottom: 0.25rem;
        }
        .custom-sidebar small {
            color: rgba(255, 255, 255, 0.6);
        }
        .custom-sidebar hr {
            border-color: rgba(255, 255, 255, 0.1);
            margin: 1.5rem 0;
        }
        .custom-sidebar a {
            color: var(--text-light);
            text-decoration: none;
            padding: 0.75rem 1rem;
            margin-bottom: 0.5rem;
            border-radius: 8px;
            transition: background 0.3s, color 0.3s;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .custom-sidebar a i {
            font-size: 1.25rem;
        }
        .custom-sidebar a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #17e891;
        }
        .custom-sidebar a.active {
            background: linear-gradient(to right, #2c5364, #203a43);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            color: #fff;
        }
        .logout-btn {
            background: linear-gradient(to right, #e74c3c, #c0392b);
            border: none;
            color: #fff;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-align: left;
            width: 100%;
            font-weight: 600;
            transition: transform 0.2s;
        }
        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        /* --- Main content --- */
.main-content {
    margin-left: var(--sidebar-width);
    padding: 7rem 2rem 2rem 2rem;
    margin-top: -60px;
}

.section-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
}

/* --- Search Input --- */
.search-input {
    width: 100%;
    max-width: 320px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--text-light);
    border-radius: 10px;
    padding: 0.6rem 1rem;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
}

.search-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.search-input:focus {
    outline: none;
    border-color: #17e891;
    box-shadow: 0 0 0 0.3rem rgba(23, 232, 145, 0.25);
}

/* --- Table Container --- */
.custom-table-container {
    /* Creates the "glass-morphism" effect */
    background: rgba(241, 241, 241, 0.05);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 18px;
    padding: 1.8rem;
    box-shadow: 0 10px 35px rgba(0, 0, 0, 0.25);
    overflow-x: auto;
    transition: all 0.3s ease;
}

.custom-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-top: 10px;
    color: var(--text-light);
    font-size: 0.95rem;
}

.custom-table thead tr {
    background-color: rgba(204, 196, 196, 0.12);
}

.custom-table th,
.custom-table td {
    padding: 14px 12px;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    vertical-align: middle;
}

.custom-table th {
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    position: sticky;
    top: 0;
    background-color: rgba(255, 255, 255, 0.15);
    z-index: 2;
}

.custom-table tbody tr:hover {
    background-color: rgba(255, 255, 255, 0.07);
    cursor: pointer;
}

.custom-table .badge {
    font-weight: 600;
    padding: 0.45em 0.8em;
    border-radius: 50px;
    font-size: 0.85rem;
}

/* Badge colors */
.badge.bg-primary { background-color: #3498db !important; }
.badge.bg-warning { background-color: #f1c40f !important; color: #111; }
.badge.bg-secondary { background-color: #95a5a6 !important; }
.badge.bg-danger { background-color: #e74c3c !important; }
.badge.bg-success { background-color: #2ecc71 !important; }

/* --- Buttons --- */
.btn-info, .btn-primary {
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.25s ease;
}

.btn-info {
    background-color: #3498db;
    border-color: #3498db;
    color: #fff;
}

.btn-info:hover {
    background-color: #2980b9;
    border-color: #2980b9;
    transform: translateY(-2px);
}

.btn-primary {
    background-color: #17e891;
    border-color: #17e891;
    color: #111;
}

.btn-primary:hover {
    background-color: #14c87b;
    border-color: #14c87b;
    transform: translateY(-2px);
}

/* --- Modal --- */
.modal-content {
    background: linear-gradient(145deg, #101c23, #1e3037);
    color: var(--text-light);
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.modal-header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
}

.modal-body strong {
    color: #17e891;
}

.modal-body .form-control,
.modal-body .form-select {
    background-color: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: var(--text-light);
}

.modal-body .form-control:read-only {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgb(255, 255, 255);
}

.modal-body label {
    color: rgba(255, 255, 255, 0.7);
}

/* --- Toast --- */
.toast-container {
    position: fixed;
    bottom: 25px;
    right: 25px;
    z-index: 1100;
    display: flex;
    align-items: center;
    background-color: #e74c3c;
    color: #fff;
    padding: 14px 18px;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.25);
    opacity: 0;
    visibility: hidden;
    transition: all 0.35s ease;
}

.toast-container.show {
    opacity: 1;
    visibility: visible;
}

.toast-container span {
    margin-right: 12px;
}

.toast-container button {
    background: transparent;
    border: none;
    color: #fff;
    font-size: 1.3em;
    cursor: pointer;
    margin-left: auto;
}

/* --- Responsive tweaks --- */
@media (max-width: 768px) {
    .custom-table th, .custom-table td {
        padding: 12px 8px;
        font-size: 0.85rem;
    }
    .search-input {
        max-width: 100%;
    }
}

    </style>
</head>
<body>
  
    <div class="main-container">
        <div class="custom-sidebar">
            <h6>Welcome! <%= firstName %>, <%= lastName %></h6>
            <small><%= employeeId %></small>
            <hr>
            <a href="/CIT_Faculty_dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a href="/CIT_Faculty_copus_history"><i class="bi bi-clock-history"></i> Copus History & Results</a>
            <a href="/CIT_Faculty_schedule_management" class="active"><i class="bi bi-calendar-event-fill"></i>My Schedule</a>
            <a href="/CIT_Faculty_setting"><i class="bi bi-gear-fill"></i> Account & Profile Settings</a>
            <hr>
            <form action="/logout" method="POST">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>

        <div class="main-content">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0" style="color: #17e891; font-weight: 600;">
                    <i class="bi bi-calendar-event-fill me-2"></i>MY SCHEDULES
                </h2>
                <div class="d-flex align-items-center">
                    <!-- Year Filter -->
                    <select id="yearFilter" class="form-select form-select-sm me-2" style="width: 140px; background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255, 255, 255, 0.2);">
                        <option value="All">All Years</option>
                        <option value="2023–2024">2023–2024</option>
                        <option value="2024–2025">2024–2025</option>
                        <option value="2025–2026">2025–2026</option>
                        <option value="2026–2027">2026–2027</option>
                    </select>

                    <!-- Semester Filter -->
                    <select id="semesterFilter" class="form-select form-select-sm" style="width: 140px; background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255, 255, 255, 0.2);">
                        <option value="All">All Semesters</option>
                        <option value="1st Semester">1st Semester</option>
                        <option value="2nd Semester">2nd Semester</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>Faculty Name</th>
                            <th>Subject</th>
                            <th>Subject Type</th>
                            <th>Department</th>
                            <th>Year</th>
                            <th>Semester</th>
                            <th>Schedule Days</th>
                            <th>Time</th>
                            <th>Room</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (schedules && schedules.length > 0) { %>
                            <% schedules.forEach(function(schedule) { %>
                                <tr>
                                    <!-- Faculty Name -->
                                    <td>
                                        <% if (schedule.faculty_user_id && schedule.faculty_user_id.firstname) { %>
                                            <%= schedule.faculty_user_id.firstname %> <%= schedule.faculty_user_id.lastname %>
                                        <% } else if (schedule.faculty_firstname && schedule.faculty_lastname) { %>
                                            <%= schedule.faculty_firstname %> <%= schedule.faculty_lastname %>
                                        <% } else { %>
                                            <span class="text-muted">Unknown</span>
                                        <% } %>
                                    </td>

                                    <!-- Subject -->
                                    <td><%= schedule.faculty_subject_name || 'N/A' %></td>

                                    <!-- Subject Type -->
                                    <td>
                                        <% if (schedule.subject_type) { %>
                                            <span class="badge bg-info"><%= schedule.subject_type %></span>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>

                                    <!-- Department -->
                                    <td>
                                        <% if (schedule.faculty_user_id && schedule.faculty_user_id.department) { %>
                                            <%= schedule.faculty_user_id.department %>
                                        <% } else if (schedule.faculty_department) { %>
                                            <%= schedule.faculty_department %>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>

                                    <!-- Year -->
                                    <td><%= schedule.school_year || 'N/A' %></td>

                                    <!-- Semester -->
                                    <td><%= schedule.semester || 'N/A' %></td>

                                    <!-- Schedule Days -->
                                    <td><%= schedule.schedule_display || schedule.day_of_week || 'N/A' %></td>

                                    <!-- Time -->
                                    <td>
                                        <% if (schedule.start_time && schedule.end_time) { %>
                                            <%= schedule.start_time %> - <%= schedule.end_time %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>

                                    <!-- Room -->
                                    <td><%= schedule.faculty_room || 'TBA' %></td>

                                    <!-- Status -->
                                    <td>
                                        <% 
                                            let badgeClass = 'bg-secondary';
                                            if (schedule.status === 'scheduled' || schedule.status === 'pending') badgeClass = 'bg-primary';
                                            else if (schedule.status === 'completed') badgeClass = 'bg-success';
                                            else if (schedule.status === 'approved') badgeClass = 'bg-warning';
                                            else if (schedule.status === 'cancelled') badgeClass = 'bg-danger';
                                        %>
                                        <span class="badge <%= badgeClass %> text-capitalize">
                                            <%= schedule.status || 'pending' %>
                                        </span>
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        <button class="btn btn-danger btn-sm" onclick="deleteSchedule('<%= schedule._id %>')">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="11" class="text-center text-muted">No schedules found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
   <script>
    // Filter functionality for schedules
    document.addEventListener("DOMContentLoaded", function () {
        const yearFilter = document.getElementById("yearFilter");
        const semesterFilter = document.getElementById("semesterFilter");
        const tableRows = document.querySelectorAll(".custom-table tbody tr");

        function filterSchedules() {
            const selectedYear = yearFilter.value;
            const selectedSemester = semesterFilter.value;

            tableRows.forEach(row => {
                const year = row.cells[4]?.textContent.trim(); // 5th column = Year
                const semester = row.cells[5]?.textContent.trim(); // 6th column = Semester

                // Show row if it matches filters or if "All" is selected
                const matchYear = selectedYear === "All" || year === selectedYear;
                const matchSemester = selectedSemester === "All" || semester === selectedSemester;

                if (matchYear && matchSemester) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        // Add event listeners
        yearFilter.addEventListener("change", filterSchedules);
        semesterFilter.addEventListener("change", filterSchedules);
    });

    // Delete schedule function
    function deleteSchedule(scheduleId) {
        if (confirm('Are you sure you want to remove this schedule?')) {
            fetch(`/delete_faculty_schedule/${scheduleId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Schedule removed successfully!');
                    location.reload();
                } else {
                    alert('Failed to remove schedule: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while removing the schedule.');
            });
        }
    }
</script>

</body>
</html>