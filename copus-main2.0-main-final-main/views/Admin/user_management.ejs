    <div id="editModal" class="modal" style="display: none;">
  <div class="modal-content">
    <h3 class="text-center mb-3">EDIT EMPLOYEE</h3>
    <form id="editEmployeeForm" method="POST" action="/update_user">
      <input type="hidden" name="employeeId" id="edit-employeeId">

      <!-- Name -->
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="edit-firstname" class="form-label">First Name <span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="firstname" id="edit-firstname" required>
        </div>
        <div class="col-md-4">
          <label for="edit-lastname" class="form-label">Last Name <span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="lastname" id="edit-lastname" required>
        </div>
        <div class="col-md-4">
          <label for="edit-middleInitial" class="form-label">Middle Initial</label>
          <input type="text" class="form-control" name="middleInitial" id="edit-middleInitial">
        </div>
      </div>

      <!-- Email and Role -->
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="edit-email" class="form-label">PHINMA Email <span class="text-danger">*</span></label>
          <input type="email" class="form-control" name="email" id="edit-email" required>
        </div>
        <div class="col-md-6">
          <label for="edit-role" class="form-label">Role <span class="text-danger">*</span></label>
          <select class="form-select" name="role" id="edit-role" required>
            <option value="">Select Role</option>
            <option value="Faculty">CIT Teacher</option>
            <option value="Observer (ALC)">Observer (ALC)</option>
            <option value="Observer (SLC)">Observer (SLC)</option>
            <option value="Admin">Admin</option>
          </select>
        </div>
      </div>

      <!-- Department and Dean -->
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="edit-department" class="form-label">Department <span class="text-danger">*</span></label>
          <select class="form-select" name="department" id="edit-department" required>
            <option value="">Select Department</option>
            <option value="CIT Department">CIT Department</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="edit-dean" class="form-label">Dean <span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="dean" id="edit-dean" required>
        </div>
      </div>

      <!-- Program Head, Years Teaching, Year Hired -->
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="edit-assignedProgramHead" class="form-label">Assigned Program Head</label>
          <input type="text" class="form-control" name="assignedProgramHead" id="edit-assignedProgramHead">
        </div>
        <div class="col-md-4">
          <label for="edit-yearsOfTeachingExperience" class="form-label">Years Teaching PHINMA ED</label>
          <input type="number" class="form-control" name="yearsOfTeachingExperience" id="edit-yearsOfTeachingExperience" min="0">
        </div>
        <div class="col-md-4">
          <label for="edit-yearHired" class="form-label">Year Hired</label>
          <input type="text" class="form-control" name="yearHired" id="edit-yearHired" placeholder="e.g. 2020">
        </div>
      </div>

      <!-- Year Regularized, Highest Ed. Attainment, Prof License -->
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="edit-yearRegularized" class="form-label">Year Regularized</label>
          <input type="text" class="form-control" name="yearRegularized" id="edit-yearRegularized" placeholder="e.g. 2023">
        </div>
        <div class="col-md-4">
          <label for="edit-highestEducationalAttainment" class="form-label">Highest Ed. Attainment</label>
          <input type="text" class="form-control" name="highestEducationalAttainment" id="edit-highestEducationalAttainment">
        </div>
        <div class="col-md-4">
          <label for="edit-professionalLicense" class="form-label">Professional License</label>
          <input type="text" class="form-control" name="professionalLicense" id="edit-professionalLicense">
