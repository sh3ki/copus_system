        <div class="main-content">
  <div class="card-border" id="userManagementView">
    <div class="section-title title-with-icon">
      <span>USER MANAGEMENT</span>
      <div class="create-account-wrapper" title="Create Account">
        <i class="bi bi-plus-circle create-account-icon"></i>
      </div>
    </div>

    <!-- Search -->
    <div class="mb-3">
      <input type="text" id="userSearchInput" class="form-control" placeholder="Search by name, email, role, department...">
    </div>

    <!-- Table -->
    <div class="table-responsive">
      <table class="custom-table">
        <thead>
          <tr>
            <th>ID #</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>PHINMA E-mail</th>
            <th>Department</th>
            <th>Dean</th>
            <th>Assigned Program Head</th>
            <th>Years Teaching</th>
            <th>Year Hired</th>
            <th>Year Regularized</th>
            <th>Highest Ed. Attainment</th>
            <th>Prof. License</th>
            <th>Employment Status</th>
            <th>Rank</th>
            <th>Role</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% employees.forEach((emp, index) => { %>
            <tr>
              <td><%= emp.employeeId || index + 1 %></td>
              <td><%= emp.lastname %></td>
              <td><%= emp.firstname %></td>
              <td><%= emp.middleInitial || '' %></td>
              <td><%= emp.email %></td>
              <td><%= emp.department || 'N/A' %></td>
              <td><%= emp.dean || 'N/A' %></td>
              <td><%= emp.assignedProgramHead || 'N/A' %></td>
              <td><%= emp.yearsOfTeachingExperience || 'N/A' %></td>
              <td><%= emp.yearHired || 'N/A' %></td>
              <td><%= emp.yearRegularized || 'N/A' %></td>
              <td><%= emp.highestEducationalAttainment || 'N/A' %></td>
              <td><%= emp.professionalLicense || 'N/A' %></td>
              <td><%= emp.employmentStatus || 'N/A' %></td>
              <td><%= emp.rank || 'N/A' %></td>
              <td><%= emp.role %></td>

              <!-- Active / Inactive Button -->
              <td>
                <button
                  class="toggle-status-btn <%= emp.status === 'Active' ? 'status-active' : 'status-inactive' %>"
                  data-id="<%= emp.employeeId %>"
                  data-status="<%= emp.status %>">
                  <%= emp.status %>
                </button>
              </td>

              <!-- Edit Button -->
              <td>
                <span
                  class="action-edit"
                  data-id="<%= emp.employeeId %>"
                  data-firstname="<%= emp.firstname %>"
                  data-lastname="<%= emp.lastname %>"
                  data-middleinitial="<%= emp.middleInitial %>"
                  data-email="<%= emp.email %>"
                  data-role="<%= emp.role %>"
                  data-department="<%= emp.department %>"
                  data-dean="<%= emp.dean %>"
                  data-assignedprogramhead="<%= emp.assignedProgramHead %>"
                  data-yearsofteachingexperience="<%= emp.yearsOfTeachingExperience %>"
                  data-yearhired="<%= emp.yearHired %>"
                  data-yearregularized="<%= emp.yearRegularized %>"
                  data-highesteducationalattainment="<%= emp.highestEducationalAttainment %>"
                  data-professionallicense="<%= emp.professionalLicense %>"
                  data-employmentstatus="<%= emp.employmentStatus %>"
                  data-rank="<%= emp.rank %>">
                  Edit
                </span>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Pagination -->
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-3" id="paginationControls">
          <li class="page-item disabled" id="previousBtn">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item" id="nextBtn">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>
    
