                const lastSelected = this.selectedOptions[this.selectedOptions.length - 1];
                lastSelected.selected = false;
            }
        });
    }
    // --- End Observer Selection Limit Logic ---


    // --- Logic to show conflict error modal ---
    const conflictErrorMessage = `<%= typeof error_modal !== 'undefined' ? error_modal : '' %>`;
    const conflictErrorModalElement = document.getElementById('conflictErrorModal');
    const conflictErrorModalBody = document.getElementById('conflictErrorModalBody');


    if (conflictErrorMessage.trim() !== '') {
        conflictErrorModalBody.innerHTML = conflictErrorMessage;
        const conflictErrorModal = new bootstrap.Modal(conflictErrorModalElement);
        conflictErrorModal.show();
    }
    // --- End logic to show conflict error modal ---


    // --- Start of NEW pagination logic ---
    const rowsPerPage = 5;
    const paginationContainer = document.getElementById('pagination');
    const scheduleTableBody = document.querySelector('.custom-table tbody');
    let allRows = Array.from(scheduleTableBody.querySelectorAll('tr'));
    let currentPage = 1;
    const maxPagesToShow = 7;


    function displayRows(page) {
        const start = (page - 1) * rowsPerPage;
        const end = start + rowsPerPage;
        allRows.forEach((row, index) => {
            row.style.display = (index >= start && index < end) ? '' : 'none';
        });
    }


    function renderPagination() {
        if (!paginationContainer) return;
        const totalRows = allRows.length;
        const totalPages = Math.ceil(totalRows / rowsPerPage);


        if (totalPages <= 1) {
            paginationContainer.style.display = 'none';
            return;
        }


        paginationContainer.style.display = 'flex';
        paginationContainer.innerHTML = '';


        // "Previous" button
        const prevLi = document.createElement('li');
        prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
        prevLi.innerHTML = `<a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>`;
        paginationContainer.appendChild(prevLi);
        prevLi.addEventListener('click', (e) => {
            e.preventDefault();
            if (currentPage > 1) {
                currentPage--;
                renderPagination();
            }
        });


        // Calculate visible page range
        let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
        let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);


        if (endPage - startPage + 1 < maxPagesToShow) {
            startPage = Math.max(1, endPage - maxPagesToShow + 1);
        }


        // Ellipsis for beginning
        if (startPage > 1) {
            const firstPageLi = document.createElement('li');
            firstPageLi.className = 'page-item';
            firstPageLi.innerHTML = `<a class="page-link" href="#">1</a>`;
            firstPageLi.addEventListener('click', (e) => {
                e.preventDefault();
                currentPage = 1;
                renderPagination();
            });
            paginationContainer.appendChild(firstPageLi);


            if (startPage > 2) {
                const ellipsisLi = document.createElement('li');
                ellipsisLi.className = 'page-item disabled';
                ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                paginationContainer.appendChild(ellipsisLi);
            }
        }


        // Numbered pages
        for (let i = startPage; i <= endPage; i++) {
            const li = document.createElement('li');
            li.className = `page-item ${i === currentPage ? 'active' : ''}`;
            li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
            paginationContainer.appendChild(li);
            li.addEventListener('click', (e) => {
                e.preventDefault();
                currentPage = i;
                renderPagination();
            });
        }


        // Ellipsis for end
        if (endPage < totalPages) {
            if (endPage < totalPages - 1) {
                const ellipsisLi = document.createElement('li');
                ellipsisLi.className = 'page-item disabled';
                ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                paginationContainer.appendChild(ellipsisLi);
            }


            const lastPageLi = document.createElement('li');
            lastPageLi.className = 'page-item';
            lastPageLi.innerHTML = `<a class="page-link" href="#">${totalPages}</a>`;
            lastPageLi.addEventListener('click', (e) => {
                e.preventDefault();
                currentPage = totalPages;
                renderPagination();
            });
            paginationContainer.appendChild(lastPageLi);
        }


        // "Next" button
        const nextLi = document.createElement('li');
        nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
        nextLi.innerHTML = `<a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>`;
        paginationContainer.appendChild(nextLi);
        nextLi.addEventListener('click', (e) => {
            e.preventDefault();
            if (currentPage < totalPages) {
                currentPage++;
                renderPagination();
            }
        });


        displayRows(currentPage);
    }


    renderPagination();
    // --- End of NEW pagination logic ---


    // --- BULK SCHEDULE CREATION LOGIC ---
    const createScheduleForm = document.getElementById('createScheduleForm');
    const createScheduleModal = new bootstrap.Modal(document.getElementById('createScheduleModal'));
    const roleSelect = document.getElementById('roleSelect');
    const facultyPreview = document.getElementById('facultyPreview');
