            subject_name: subjectName,      // Rest (e.g., "Computer Programming 1")
            subject_type: formData.get('subject_type'),
            academic_year: formData.get('academic_year'),
            semester: formData.get('semester'),
            room: formData.get('room'),
            days: selectedDays
        };

        console.log('ðŸ“¤ Sending data to backend:');
        console.log('  - Subject Type:', formData.get('subject_type'));
        console.log('  - Full data:', data);


        try {
            const response = await fetch('/admin_schedule/create_bulk', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
            });


            const result = await response.json();
            if (response.ok) {
                // Check for conflicts
                if (result.conflict_count > 0) {
                    // Show conflict modal ON TOP of create modal
                    const conflictModal = new bootstrap.Modal(document.getElementById('conflictWarningModal'), {
                        backdrop: 'static',
                        keyboard: false
                    });
