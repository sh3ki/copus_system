    <!-- Faculty Schedules Title -->
    <h5 class="text-success mt-3 mb-3" style="font-weight: 600;"></h5>

    <!-- Table -->
    <div class="table-responsive">
      <table class="table custom-table">
        <thead>
          <tr>
            <th>Faculty Name</th>
            <th>Subject</th>
            <th>Subject Type</th>
            <th>Department</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Schedule Days</th>
            <th>Time</th>
            <th>Room</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (schedules && schedules.length > 0) { %>
            <% schedules.forEach(function(schedule) { %>
              <tr>
                <td>
                  <% if (schedule.faculty_user_id && schedule.faculty_user_id.firstname) { %>
                    <%= schedule.faculty_user_id.firstname %> <%= schedule.faculty_user_id.lastname %>
                  <% } else if (schedule.faculty_firstname && schedule.faculty_lastname) { %>
                    <%= schedule.faculty_firstname %> <%= schedule.faculty_lastname %>
                  <% } else { %>
                    <span class="text-muted">Unknown</span>
                  <% } %>
                </td>
                <td><%= schedule.subject || 'N/A' %></td>
                <td>
                  <% if (schedule.subject_type) { %>
                    <span class="badge bg-info"><%= schedule.subject_type %></span>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
                <td>
                  <% if (schedule.faculty_user_id && schedule.faculty_user_id.department) { %>
                    <%= schedule.faculty_user_id.department %>
                  <% } else if (schedule.faculty_department) { %>
                    <%= schedule.faculty_department %>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
                <td><%= schedule.academic_year || 'N/A' %></td>
                <td><%= schedule.semester || 'N/A' %></td>
                <td><%= schedule.schedule_display || schedule.day_of_week || 'N/A' %></td>
                <td>
                  <% if (schedule.start_time && schedule.end_time) { %>
                    <%= schedule.start_time %> - <%= schedule.end_time %>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td><%= schedule.faculty_room || 'TBA' %></td>
                <td>
                  <% 
                    let badgeClass = 'bg-secondary';
                    if (schedule.status === 'scheduled' || schedule.status === 'pending') badgeClass = 'bg-primary';
                    else if (schedule.status === 'completed') badgeClass = 'bg-success';
                    else if (schedule.status === 'approved') badgeClass = 'bg-warning';
                    else if (schedule.status === 'cancelled') badgeClass = 'bg-danger';
                  %>
                  <span class="badge <%= badgeClass %> text-capitalize">
                    <%= schedule.status || 'Pending' %>
                  </span>
                </td>
                <td>
                  <button class="btn btn-sm btn-warning edit-schedule-btn" 
                          data-id="<%= schedule._id %>"
                          data-faculty-name="<%= schedule.faculty_user_id ? schedule.faculty_user_id.firstname + ' ' + schedule.faculty_user_id.lastname : (schedule.faculty_firstname + ' ' + schedule.faculty_lastname) %>"
                          data-start-time="<%= schedule.start_time %>"
                          data-end-time="<%= schedule.end_time %>"
                          data-subject-code="<%= schedule.subject_code || '' %>"
                          data-subject-name="<%= schedule.subject_name || '' %>"
                          data-subject-type="<%= schedule.subject_type || '' %>"
                          data-academic-year="<%= schedule.academic_year || '' %>"
                          data-semester="<%= schedule.semester || '' %>"
                          data-room="<%= schedule.room || '' %>"
                          data-day="<%= schedule.day_of_week || '' %>"
                          data-status="<%= schedule.status || 'pending' %>"
                          title="Edit Schedule">
                    <i class="bi bi-pencil-fill"></i>
                  </button>
                  <button class="btn btn-sm btn-danger delete-schedule-btn" 
                          data-id="<%= schedule._id %>"
                          data-faculty-name="<%= schedule.faculty_user_id ? schedule.faculty_user_id.firstname + ' ' + schedule.faculty_user_id.lastname : (schedule.faculty_firstname + ' ' + schedule.faculty_lastname) %>"
                          title="Delete Schedule">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="10" class="text-center text-muted py-3">No schedules found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
