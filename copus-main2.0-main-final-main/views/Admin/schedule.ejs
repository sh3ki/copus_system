    // Delegated click toggle highlight (multi-select)
    facultyPreview.addEventListener('click', function (e) {
        const item = e.target.closest('.faculty-item');
        if (!item) return;


        const selectedInput = document.getElementById('selectedFacultyId');
        const selectedIds = selectedInput.value ? selectedInput.value.split(',') : [];
        const clickedId = item.dataset.id;


        if (item.classList.contains('selected')) {
            item.classList.remove('selected');
            item.setAttribute('aria-selected', 'false');
            selectedInput.value = selectedIds.filter(id => id !== clickedId).join(',');
        } else {
            item.classList.add('selected');
            item.setAttribute('aria-selected', 'true');
            selectedIds.push(clickedId);
            selectedInput.value = selectedIds.join(',');
        }
    });


    // Submit form
    createScheduleForm.addEventListener('submit', async function (e) {
        e.preventDefault();
        const formData = new FormData(this);
        const selectedFacultyIds = document.getElementById('selectedFacultyId').value.split(',').filter(Boolean);


        if (selectedFacultyIds.length === 0) {
            alert('Please select at least one faculty member!');
            return;
        }


        const selectedDays = Array.from(document.querySelectorAll('input[name="days[]"]:checked'))
            .map(checkbox => checkbox.value);


        if (selectedDays.length === 0) {
            alert('Please select at least one day of the week.');
            return;
        }


        // Parse subject to extract code and name
        const subjectValue = formData.get('subject'); // e.g., "ITE 260 Computer Programming 1"
        let subjectCode = '';
        let subjectName = '';
        
        if (subjectValue) {
            // Split by space and take first part as code (e.g., "ITE 260")
            const parts = subjectValue.split(' ');
            if (parts.length >= 3) {
                // First two words are the code (e.g., "ITE 260")
                subjectCode = `${parts[0]} ${parts[1]}`;
                // Rest is the name (e.g., "Computer Programming 1")
                subjectName = parts.slice(2).join(' ');
            } else {
                // If less than 3 parts, use the whole value
                subjectCode = subjectValue;
                subjectName = subjectValue;
            }
        }

        const data = {
            faculty_ids: selectedFacultyIds, // plural, array
            target_role: formData.get('target_role'),
            start_time: formData.get('start_time'),
            end_time: formData.get('end_time'),
