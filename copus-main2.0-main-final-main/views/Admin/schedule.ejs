            const academicYear = button.getAttribute('data-academic-year');
            const semester = button.getAttribute('data-semester');
            const room = button.getAttribute('data-room');
            const day = button.getAttribute('data-day');
            const status = button.getAttribute('data-status');

            // Reconstruct the full subject value (code + name)
            const fullSubject = subjectCode && subjectName ? `${subjectCode} ${subjectName}` : '';

            // Populate the edit form
            document.getElementById('editScheduleId').value = scheduleId;
            document.getElementById('editFacultyName').value = facultyName;
            document.getElementById('editStartTime').value = startTime;
            document.getElementById('editEndTime').value = endTime;
            
            // Set the subject dropdown to the matching option
            const subjectDropdown = document.getElementById('editSubject');
            let optionFound = false;
            for (let option of subjectDropdown.options) {
                if (option.value === fullSubject) {
                    option.selected = true;
                    optionFound = true;
                    break;
                }
            }
            // If exact match not found, try to find by code or name
            if (!optionFound && (subjectCode || subjectName)) {
                for (let option of subjectDropdown.options) {
                    if ((subjectCode && option.value.includes(subjectCode)) || 
                        (subjectName && option.value.includes(subjectName))) {
                        option.selected = true;
                        break;
                    }
                }
            }
            
            document.getElementById('editSubjectType').value = subjectType;
            document.getElementById('editAcademicYear').value = academicYear;
            document.getElementById('editSemester').value = semester;
            document.getElementById('editRoom').value = room;
            document.getElementById('editDayOfWeek').value = day;
            document.getElementById('editStatus').value = status;

            editScheduleModal.show();
        }
    });

    // Handle edit form submission
    document.getElementById('editScheduleForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(this);
        // Parse subject to extract code and name
        const subjectValue = formData.get('subject'); // e.g., "ITE 366 Introduction to Computing"
        let subjectCode = '';
        let subjectName = '';
        
        if (subjectValue) {
            const parts = subjectValue.split(' ');
            if (parts.length >= 3) {
                // First two words are the code (e.g., "ITE 366")
                subjectCode = `${parts[0]} ${parts[1]}`;
                // Rest is the name (e.g., "Introduction to Computing")
                subjectName = parts.slice(2).join(' ');
            } else {
                subjectCode = subjectValue;
                subjectName = subjectValue;
            }
        }

        const data = {
            schedule_id: formData.get('schedule_id'),
            start_time: formData.get('start_time'),
            end_time: formData.get('end_time'),
            subject_code: subjectCode,
            subject_name: subjectName,
            subject_type: formData.get('subject_type'),
            academic_year: formData.get('academic_year'),
            semester: formData.get('semester'),
            room: formData.get('room'),
            day_of_week: formData.get('day_of_week'),
            status: formData.get('status')
        };

        try {
            const response = await fetch('/admin_schedule/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            if (response.ok) {
                alert('Schedule updated successfully!');
                editScheduleModal.hide();
                location.reload();
            } else {
                if (response.status === 409) {
                    alert('Conflict: ' + result.message);
                } else {
                    alert('Error: ' + result.message);
                }
            }
        } catch (error) {
            console.error('Error updating schedule:', error);
            alert('An error occurred. Please try again.');
        }
    });
    // --- END EDIT SCHEDULE LOGIC ---

    // --- DELETE SCHEDULE LOGIC ---
    const deleteScheduleModal = new bootstrap.Modal(document.getElementById('deleteScheduleModal'));
    
    document.addEventListener('click', function(e) {
        if (e.target.closest('.delete-schedule-btn')) {
            const button = e.target.closest('.delete-schedule-btn');
            const scheduleId = button.getAttribute('data-id');
            const facultyName = button.getAttribute('data-faculty-name');

            document.getElementById('deleteScheduleId').value = scheduleId;
            document.getElementById('deleteScheduleInfo').textContent = `Schedule for ${facultyName}`;

            deleteScheduleModal.show();
        }
    });

    // Handle delete confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        const scheduleId = document.getElementById('deleteScheduleId').value;

        try {
            const response = await fetch('/admin_schedule/delete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ schedule_id: scheduleId })
            });

            const result = await response.json();
            if (response.ok) {
                alert('Schedule deleted successfully!');
                deleteScheduleModal.hide();
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            console.error('Error deleting schedule:', error);
            alert('An error occurred. Please try again.');
        }
    });
    // --- END DELETE SCHEDULE LOGIC ---

    // --- View Schedule Modal Logic ---
    const viewModal = new bootstrap.Modal(document.getElementById('viewScheduleModal'));
    const scheduleUserFullName = document.getElementById('scheduleUserFullName');
    const scheduleImage = document.getElementById('scheduleImage');


    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('view-schedule-btn')) {
            const button = e.target;
            const fullName = button.getAttribute('data-fullname');
            const imagePath = button.getAttribute('data-image').replace(/\\/g, '/');
            scheduleUserFullName.textContent = fullName;
