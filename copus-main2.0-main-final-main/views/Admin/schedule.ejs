                        const backdrops = document.querySelectorAll('.modal-backdrop');
                        if (backdrops.length > 0) {
                            backdrops[backdrops.length - 1].style.zIndex = '1055';
                        }
                    });
                    
                    let conflictHTML = '<div class="alert alert-warning">';
                    conflictHTML += `<p><strong>${result.conflict_count} schedule(s) were skipped due to time conflicts:</strong></p>`;
                    conflictHTML += '<ul>';
                    result.conflicts.forEach(conflict => {
                        conflictHTML += `<li><strong>${conflict.faculty}</strong> - ${conflict.day}: Existing schedule (${conflict.existing_time}) conflicts with new schedule (${conflict.new_time})</li>`;
                    });
                    conflictHTML += '</ul>';
                    conflictHTML += `<p class="mt-2"><strong>Successfully created:</strong> ${result.created_count} schedule(s)</p>`;
                    conflictHTML += '</div>';
                    
                    conflictList.innerHTML = conflictHTML;
                    conflictModal.show();
                    
                    // Reload after modal is closed
                    document.getElementById('conflictWarningModal').addEventListener('hidden.bs.modal', function() {
                        location.reload();
                    }, { once: true });
                } else {
                    alert(`Successfully created ${result.created_count} schedules for ${result.users_count} users across ${result.days_count} days!`);
                    createScheduleModal.hide();
                    location.reload();
                }
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            console.error('Network or server error:', error);
            alert('An error occurred. Please try again.');
        }
    });
