    background: var(--secondary-color-start);
    border: 1px solid var(--secondary-color-start);
    color: #fff;
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.2s;
}

/* --- Status Badges (Consolidated and improved) --- */
.copus-badge,
.badge {
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
    display: inline-block; /* Ensures consistent padding */
}

.copus-badge {
    background: linear-gradient(45deg, var(--accent-color), #20c997);
