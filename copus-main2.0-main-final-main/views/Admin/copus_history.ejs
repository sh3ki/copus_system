.badge-warning {
    background: linear-gradient(45deg, #f39c12, #e67e22);
    color: #fff;
}

.badge-danger {
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    color: #fff;
}

.badge-info {
    background: linear-gradient(45deg, #17a2b8, #138496);
    color: #fff;
}

/* Status Text Classes (for column that shows "DRAFT", "SUBMITTED" etc.) */
.status-draft {
    color: #f39c12; /* Warning color */
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.8rem;
}

.status-submitted {
    color: #3498db; /* Primary color */
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.8rem;
}

.status-completed {
    color: #2ecc71; /* Success color */
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.8rem;
}

/* --- Pagination --- */
.pagination .page-item .page-link {
    background-color: var(--card-bg-transparent);
    border: 1px solid var(--border-color);
    color: var(--text-light);
    transition: background-color 0.3s, border-color 0.3s;
}

.pagination .page-item .page-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: var(--accent-color);
}

.pagination .page-item.active .page-link {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
    color: var(--text-dark); /* Changed to dark text for contrast on bright accent */
    font-weight: bold;
}

/* --- No Results --- */
.no-results {
    text-align: center;
    padding: 3rem 1rem;
}

.no-results-content {
    color: rgba(255, 255, 255, 0.6);
}

.no-results-content h5 {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.5rem;
}

/* --- Responsive Design: FIX/IMPROVEMENT --- */
/* The main fix is ensuring the sidebar behaves correctly on mobile */
