  border: none;
  color: #fff;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  text-align: left;
  width: 100%;
  font-weight: 600;
  transition: transform 0.2s;
}

.logout-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

 /* Main Content */
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 2.5rem 3rem 2.5rem 2rem; /* ðŸ”¹ added more right padding space */
      overflow-x: hidden;
    }

    .dashboard-title {
