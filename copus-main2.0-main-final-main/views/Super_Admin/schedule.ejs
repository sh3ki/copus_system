                          <tr>
                            <th>Faculty Name</th>
                            <th>Subject</th>
                            <th>Subject Type</th>
                            <th>Department</th>
                            <th>Year</th>
                            <th>Semester</th>
                            <th>Schedule Days</th>
                            <th>Time</th>
                            <th>Room</th>
                            <th>Status</th>
                          </tr>
                        </thead>
