        }

        .user-icon-circle {
            width: 40px;
            height: 40px;
            background-color: #ddd;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .user-icon-circle i {
            font-size: 1.5rem;
            color: #777;
        }
