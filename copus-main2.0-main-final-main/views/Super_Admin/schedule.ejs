                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>

            <div class="main-content">
                <div class="card-border" id="scheduleManagementView">
                    <% if (typeof errorMessage !== 'undefined') { %>
                        <div id="customToast" class="toast-container show">
                            <span><%= errorMessage %></span>
                            <button onclick="closeToast()">×</button>
                        </div>
                    <% } %>
                    <% if (success_msg && success_msg.length > 0) { %>
                        <div id="successToast" class="toast-container show" style="background-color: #4CAF50;">
                            <span><%= success_msg %></span>
                            <button onclick="closeToast('successToast')">×</button>
                        </div>
                    <% } %>
                    <% if (error_msg && error_msg.length > 0) { %>
                        <div id="errorToast" class="toast-container show" style="background-color: #f44336;">
                            <span><%= error_msg %></span>
                            <button onclick="closeToast('errorToast')">×</button>
                        </div>
                    <% } %>

