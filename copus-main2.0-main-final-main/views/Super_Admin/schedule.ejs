<script>
    // Functions for toasts
    function closeToast(toastId = 'customToast') { // Make it flexible for success/error toasts
        const toast = document.getElementById(toastId);
        if (toast) {
            toast.classList.remove('show');
            toast.classList.add('hide');
            // Remove from DOM after transition to prevent re-showing on navigation
            setTimeout(() => toast.remove(), 500);
        }
    }

    // Auto-hide the toasts after 5 seconds
    window.addEventListener('DOMContentLoaded', () => {
        const errorToast = document.getElementById('customToast'); // Your original error toast
        const successToast = document.getElementById('successToast');
        const regularErrorToast = document.getElementById('errorToast'); // For flash messages

        if (errorToast) { setTimeout(() => closeToast('customToast'), 5000); }
        if (successToast) { setTimeout(() => closeToast('successToast'), 5000); }
        if (regularErrorToast) { setTimeout(() => closeToast('errorToast'), 5000); }
    });

    document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('tableSearch');
    const table = document.getElementById('scheduleTable');
    const tbody = table.getElementsByTagName('tbody')[0];
    const pagination = document.getElementById('pagination');

    // Get all original table rows. This needs to be done once.
    const originalRows = Array.from(tbody.querySelectorAll('tr:not(.text-center)'));
    let filteredRows = [];
    let currentPage = 1;
    const rowsPerPage = 5;

    // --- Search Functionality ---
    function performSearch() {
        const searchTerm = searchInput.value.toLowerCase();
        if (searchTerm) {
            filteredRows = originalRows.filter(row => {
                const rowText = row.textContent.toLowerCase();
                return rowText.includes(searchTerm);
            });
        } else {
            // If search is empty, show all rows
            filteredRows = [...originalRows];
        }
        
        currentPage = 1; // Always reset to the first page on a new search
        renderTableAndPagination();
    }

    searchInput.addEventListener('keyup', performSearch);

    // --- Pagination Functionality ---
    function renderTableAndPagination() {
        // Clear table body before rendering
        tbody.innerHTML = ''; 

        if (filteredRows.length === 0) {
            const noRecordsRow = document.createElement('tr');
            noRecordsRow.innerHTML = `<td colspan="16" class="text-center">No schedule records found for your search.</td>`;
            tbody.appendChild(noRecordsRow);
            pagination.innerHTML = ''; // Hide pagination controls
            return;
        }

        const totalPages = Math.ceil(filteredRows.length / rowsPerPage);
        const startIndex = (currentPage - 1) * rowsPerPage;
        const endIndex = startIndex + rowsPerPage;
        
        filteredRows.slice(startIndex, endIndex).forEach(row => {
            tbody.appendChild(row); // Append the actual DOM row
        });

        renderPagination(totalPages);
    }

    function renderPagination(totalPages) {
        pagination.innerHTML = ''; // Clear existing buttons

        if (totalPages <= 1) return; // No pagination needed

        const createButton = (text, page) => {
            const button = document.createElement('button');
            button.textContent = text;
            button.classList.add('btn', 'btn-secondary', 'me-2');
            if (page === currentPage) {
                button.classList.add('active');
            }
            button.disabled = (page < 1 || page > totalPages);
            button.addEventListener('click', () => {
                currentPage = page;
                renderTableAndPagination();
            });
            return button;
        };

        // Previous button
        pagination.appendChild(createButton('Prev', currentPage - 1));

        // Page number buttons
        let startPage = Math.max(1, currentPage - 2);
        let endPage = Math.min(totalPages, currentPage + 2);

        if (currentPage <= 3) {
            endPage = Math.min(5, totalPages);
        } else if (currentPage > totalPages - 2) {
            startPage = Math.max(1, totalPages - 4);
        }

        if (startPage > 1) {
            pagination.appendChild(createButton('1', 1));
            if (startPage > 2) {
                const ellipsis = document.createElement('span');
                ellipsis.textContent = '...';
                ellipsis.classList.add('btn', 'btn-secondary', 'disabled', 'me-2');
                pagination.appendChild(ellipsis);
            }
        }

        for (let i = startPage; i <= endPage; i++) {
            pagination.appendChild(createButton(i, i));
        }

        if (endPage < totalPages) {
            if (endPage < totalPages - 1) {
                const ellipsis = document.createElement('span');
                ellipsis.textContent = '...';
                ellipsis.classList.add('btn', 'btn-secondary', 'disabled', 'me-2');
                pagination.appendChild(ellipsis);
            }
            pagination.appendChild(createButton(totalPages, totalPages));
        }

        // Next button
        pagination.appendChild(createButton('Next', currentPage + 1));
    }
    
    // Filter functionality for Faculty Schedules
    document.addEventListener("DOMContentLoaded", function () {
        const yearFilter = document.getElementById("yearFilter");
        const semesterFilter = document.getElementById("semesterFilter");
        const tableRows = document.querySelectorAll(".custom-table tbody tr");

        function filterSchedules() {
            const selectedYear = yearFilter.value;
            const selectedSemester = semesterFilter.value;

            tableRows.forEach(row => {
                const year = row.cells[4]?.textContent.trim(); // 5th column = Year
                const semester = row.cells[5]?.textContent.trim(); // 6th column = Semester

                // Show row if it matches filters or if "All" is selected
                const matchYear = selectedYear === "All" || year === selectedYear;
                const matchSemester = selectedSemester === "All" || semester === selectedSemester;

                if (matchYear && matchSemester) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        // Add event listeners
        yearFilter.addEventListener("change", filterSchedules);
        semesterFilter.addEventListener("change", filterSchedules);
    });

