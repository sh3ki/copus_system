/* --- Form Controls/Filters --- */
.filter-container {
    /* Use the same styling as the advanced-filters block for consistency */
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(5px);
    border-radius: 15px;
    padding: 2rem;
    margin-bottom: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.form-control {
    background-color: rgba(255, 255, 255, 0.1); /* Slightly more visible than 'transparent' */
    border: 1px solid var(--border-color);
    color: var(--text-light);
    box-shadow: none;
    transition: all 0.3s ease;
    border-radius: 8px; /* Consistent with filter-group .form-control */
