/* --- Main Content: FIX --- */
/* Adjusted margin-top to account for the fixed header */
.main-content {
    margin-left: var(--sidebar-width);
    padding: calc(var(--header-height) + 1rem) 2rem 2rem 2rem; /* Header height + extra margin */
    width: calc(100% - var(--sidebar-width));
    min-height: 100vh; /* Ensures main content takes full height */
