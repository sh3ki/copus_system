.form-control::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.form-control:focus {
    background-color: rgba(255, 255, 255, 0.15); /* Slightly brighter on focus */
    border-color: var(--accent-color);
    box-shadow: 0 0 0 0.25rem rgba(23, 232, 145, 0.25);
    color: var(--text-light);
}

/* Specific styling for select dropdowns to ensure background consistency */
.form-control option {
    background: var(--primary-color-start); /* Dark background for dropdown options */
    color: #fff;
}
/* This override is to handle the inconsistent base .form-control with .filter-group */
.filter-group .form-control {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: #fff;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
}

/* --- Filters Layout --- */
.filter-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    align-items: end;
}
/* Clear button specific positioning fix */
.filter-group:last-child {
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Align button to the bottom */
}

.btn-clear {
    width: 100%; /* Make button fill the grid column */
}

/* --- Table Styles: CONSOLIDATION --- */
/* Consolidated .table-responsive and .table-container to use one style block for cleaner code */
