    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const allRows = Array.from(document.querySelectorAll('#resultsTableBody tr'));
            const searchInput = document.getElementById('searchInput');
            const copusFilter = document.getElementById('copusFilter');
            const yearFilter = document.getElementById('yearFilter');
            const sortBy = document.getElementById('sortBy');
            const paginationContainer = document.getElementById('pagination');
            const resultsCount = document.getElementById('resultsCount');
            const rowsPerPage = 15;
            let currentPage = 1;
            let filteredRows = [...allRows];

            // Filter and search function
            function applyFilters() {
                const searchTerm = searchInput.value.toLowerCase();
                const copusValue = copusFilter.value;
                const yearValue = yearFilter.value;
                const sortValue = sortBy.value;

                // Start with all rows
                filteredRows = allRows.filter(row => {
                    if (!row.dataset) return false;
                    
                    // Search filter
                    const searchData = row.dataset.search || '';
                    const matchesSearch = !searchTerm || searchData.includes(searchTerm);
                    
                    // COPUS type filter
                    const copusType = row.dataset.copus || '';
                    const matchesCopus = !copusValue || copusType === copusValue;
                    
                    // Year filter
                    const year = row.dataset.year || '';
                    const matchesYear = !yearValue || year === yearValue;
                    
                    return matchesSearch && matchesCopus && matchesYear;
                });

                // Apply sorting
                filteredRows.sort((a, b) => {
                    switch (sortValue) {
                        case 'date-desc':
                            return new Date(b.dataset.date) - new Date(a.dataset.date);
                        case 'date-asc':
                            return new Date(a.dataset.date) - new Date(b.dataset.date);
                        case 'grade-desc':
                            return parseFloat(b.dataset.grade) - parseFloat(a.dataset.grade);
                        case 'grade-asc':
                            return parseFloat(a.dataset.grade) - parseFloat(b.dataset.grade);
                        case 'faculty-asc':
                            return a.dataset.faculty.localeCompare(b.dataset.faculty);
                        case 'faculty-desc':
                            return b.dataset.faculty.localeCompare(a.dataset.faculty);
                        case 'subject-asc':
                            return a.dataset.subject.localeCompare(b.dataset.subject);
                        default:
                            return 0;
                    }
                });

                currentPage = 1;
                renderTable();
                updateResultsCount();
            }

            // Render table with pagination
            function renderTable() {
                const tbody = document.getElementById('resultsTableBody');
                tbody.innerHTML = '';

                if (filteredRows.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="16" style="text-align: center; padding: 2rem; font-style: italic; color: rgba(255,255,255,0.6);">No results match your filters.</td></tr>';
                    updatePagination();
                    return;
                }

                const start = (currentPage - 1) * rowsPerPage;
                const end = start + rowsPerPage;
                const paginatedRows = filteredRows.slice(start, end);

                paginatedRows.forEach(row => {
                    tbody.appendChild(row.cloneNode(true));
                });

                updatePagination();
            }

            // Update pagination
            function updatePagination() {
                const pageCount = Math.ceil(filteredRows.length / rowsPerPage);
                paginationContainer.innerHTML = '';

                if (pageCount <= 1) return;

                // Previous button
                const prevLi = document.createElement('li');
                prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                prevLi.innerHTML = '<a class="page-link" href="#">Previous</a>';
                if (currentPage > 1) {
                    prevLi.addEventListener('click', e => {
                        e.preventDefault();
                        currentPage--;
                        renderTable();
                    });
                }
                paginationContainer.appendChild(prevLi);

                // Page numbers
                const maxVisiblePages = 5;
                let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
                let endPage = Math.min(pageCount, startPage + maxVisiblePages - 1);
                
                if (endPage - startPage + 1 < maxVisiblePages) {
                    startPage = Math.max(1, endPage - maxVisiblePages + 1);
                }

                for (let i = startPage; i <= endPage; i++) {
                    const li = document.createElement('li');
                    li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                    li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
                    li.addEventListener('click', e => {
                        e.preventDefault();
                        currentPage = i;
                        renderTable();
                    });
                    paginationContainer.appendChild(li);
                }

                // Next button
                const nextLi = document.createElement('li');
                nextLi.className = `page-item ${currentPage === pageCount ? 'disabled' : ''}`;
                nextLi.innerHTML = '<a class="page-link" href="#">Next</a>';
                if (currentPage < pageCount) {
                    nextLi.addEventListener('click', e => {
                        e.preventDefault();
                        currentPage++;
                        renderTable();
                    });
                }
                paginationContainer.appendChild(nextLi);
            }

            // Update results count
            function updateResultsCount() {
                const total = allRows.length;
                const filtered = filteredRows.length;
                resultsCount.textContent = `Showing ${filtered} of ${total} COPUS results`;
            }

            // Clear all filters
            window.clearFilters = function() {
                searchInput.value = '';
                copusFilter.value = '';
                yearFilter.value = '';
                sortBy.value = 'date-desc';
                applyFilters();
            };

            // Event listeners
            searchInput.addEventListener('input', applyFilters);
            copusFilter.addEventListener('change', applyFilters);
            yearFilter.addEventListener('change', applyFilters);
            sortBy.addEventListener('change', applyFilters);

            // Initial render
            applyFilters();
        });

        // PDF Download Function
        function downloadPDF(resultId) {
            // Show loading state
            const button = document.querySelector(`[data-result-id="${resultId}"]`);
            const originalContent = button.innerHTML;
            button.innerHTML = '<i class="bi bi-hourglass-split"></i> Generating...';
            button.disabled = true;

            // Create a link and trigger download
            const link = document.createElement('a');
            link.href = `/observer/download-copus-pdf/${resultId}`;
            link.download = `copus-result-${resultId}.pdf`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Reset button after a delay
            setTimeout(() => {
                button.innerHTML = originalContent;
                button.disabled = false;
            }, 2000);
        }

        // Excel Download Function
        function downloadExcel(resultId) {
            // Show loading state
            const buttons = document.querySelectorAll(`[data-result-id="${resultId}"]`);
            const excelButton = Array.from(buttons).find(btn => btn.classList.contains('download-excel-btn'));
            if (!excelButton) return;
            
            const originalContent = excelButton.innerHTML;
            excelButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Generating...';
            excelButton.disabled = true;

            // Create a link and trigger download
            const link = document.createElement('a');
            link.href = `/observer/download-copus-excel/${resultId}`;
            link.download = `copus-result-${resultId}.xlsx`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Reset button after a delay
            setTimeout(() => {
                excelButton.innerHTML = originalContent;
                excelButton.disabled = false;
            }, 2000);
        }
